<%= form_for(@consumer, :html => {:class => "smart-green"}) do |f| %>
  <h1>Signup for ParlayVous</h1>
  <ul class = "errors">
  <% @consumer.errors.full_messages.each do |error| %>
    <li style="color:red"><%= error %></li>
  <% end %>
  </ul>
  <label>
    <span id = "required">Username: </span>
    <%= f.text_field :username, placeholder: "Username" %>
  </label>
  <label>
     <span id = "required">Password: </span><br/><br/>
     <%= f.password_field :password, placeholder: "Password" %>
  </label>
  <label>
     <span id = "required">Confirm Password: </span><br/><br/>
     <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
  </label>
  <label>
    <span id = "required">Email: </span><br/><br/>
    <%= f.email_field :email, placeholder: "E-mail"%>
  </label>
  <label>
    <span id = "required">First Name: </span><br/><br/>
    <%= f.text_field :first_name, placeholder: "First Name"%>
  </label>
  <label>
    <span>Last Name: </span><br/><br/>
    <%= f.text_field :last_name, placeholder: "Last Name"%>
  </label>
  <label>
    <span id = "required">Address: </span><br/><br/>
    <%= f.text_field :address, placeholder: "Address"%>
  </label>
  <label>
     <span>Phone Number: </span><br/><br/>
     <%= f.telephone_field :phone_number, id: 'phone_us', placeholder: "Phone Number"%>
  </label>
  <br/>
  <label>
  <%= f.submit 'Join!', :class => 'button' %>
  </label>
<% end %>
