  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div>
  <% if current_consumer %>
    <ul>
      <li>Consumer: <%= current_consumer.email %></li>
      <li><%= link_to "Log out", logout_path, method: "delete" %></li>
    </ul>
  <% else %>
    <ul>
      <li><%= link_to "Login", root_path %></a></li>
      <li><%= link_to "Signup", new_consumer_path %></a></li>
    </ul>
  <% end %>
</div>

<div>
  <% if current_supplier %>
    <ul>
      <li>Supplier: <%= current_supplier.email %></li>
      <li><%= link_to "Log out", logout_path, method: "delete" %></li>
    </ul>
  <% end %>
</div>

<%= yield %>

</body>
</html>
